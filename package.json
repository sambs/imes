{
  "name": "imes",
  "description": "In-memory event sourcing",
  "version": "0.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist/*",
    "prepublish": "npm run build",
    "prettify": "prettier --write 'src/**/*.ts'",
    "test": "tape -r source-map-support/register dist/**/__tests__/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/uuid": "^3.4.5",
    "graphql-subscriptions": "^1.1.0",
    "ndjson": "^1.5.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^12.7.4",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.13",
    "tape": "^4.11.0",
    "typescript": "^3.5.3"
  }
}
